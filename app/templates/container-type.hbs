<div class="list-view">
  <div class="list-view__header row">
    <div class="cell cell_type_header" data-label="column-title">Name</div>

    <!-- Account for scrollbar width :'(  -->
    <div class="cell cell_type_header spacer"></div>
  </div>

  <div class="list-view__list-container">
    {{#each filtered as |content|}}
      <div class="list-tree__item row" data-label="instance-row" {{action "inspectInstance" content}}>
        <div class="cell {{if content.inspectable 'cell_clickable'}}">
          {{content.name}}
        </div>
      </div>
    {{/each}}
  </div>
</div>
