{{#x-list}}
  <div class="list__row list__row_header">
    <div class="list__cell">
      Route Name
    </div>
    <div class="list__cell">
      Route
    </div>
    <div class="list__cell">
      Controller
    </div>
    <div class="list__cell">
      Template
    </div>
    <div class="list__cell list__cell_size_large">
      URL
    </div>
    <!-- Account for scrollbar width :'(  -->
    <div class="list__cell list__cell_spacer"></div>
  </div>

  {{#list-content contentHeight=application.contentHeight}}
    {{#vertical-collection content=filtered defaultHeight=30 as |content|}}
      {{route-item
        model=content
        currentRoute=currentRoute
        inspectRoute="inspectRoute"
        sendRouteHandlerToConsole="sendRouteHandlerToConsole"
        inspectController="inspectController"
        sendControllerToConsole="sendControllerToConsole"
        class="js-route-item"
      }}
    {{/vertical-collection}}
  {{/list-content}}
{{/x-list}}
