{{#if items.length}}
<div class="list-view" data-label="promise-tree">
  <div class="list-view__header row">
    <div class="cell cell_type_header">
      Name
    </div>
    <div class="cell cell_type_header cell_value_numeric">
      Timestamp
    </div>
    <!-- Account for scrollbar width :'(  -->
    <div class="cell cell_type_header spacer"></div>
  </div>

  <div class="list-view__list-container">
    {{view "renderList" content=items}}
  </div>

  <div class="list-view__filter">
    <div class="filter-bar">
      <div {{action "clearProfiles"}} class="filter-bar__clear pill" data-label="clear-render-profiles-btn">CLEAR</div>
    </div>
  </div>

</div>
{{else}}
  <div>
    <p>No rendering metrics have been collected. Try navigating around your Ember Application!</p>

    <p><strong>Note:</strong> Very fast rendering times (&lt; 1ms) are excluded.</p>
  </div>
{{/if}}
