<div class="list-view">
  <div class="list-view__header row">
    {{#each columns as |column|}}
      <div class="cell cell_type_header" data-label="column-title">{{column.desc}}</div>
    {{/each}}

    <!-- Account for scrollbar width :'(  -->
    <div class="cell cell_type_header spacer"></div>
  </div>

  <div class="list-view__list-container">
    {{view "record-list" content=filtered columns=columns controller=this}}
  </div>
</div>
