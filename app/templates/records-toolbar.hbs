<div class="toolbar">
  <div class="toolbar__search" data-label="records-search">
    {{input value=search placeholder="Search"}}
  </div>

  <button data-label="filter" {{bind-attr class="noFilterValue:active :toolbar__radio"}} {{action "setFilter"}}>
    All
  </button>

  <div class="divider"></div>

  {{#each filters itemController="recordFilter" as |filter|}}
    <button data-label="filter" class="{{if filter.checked 'active'}} toolbar__radio" {{action "setFilter" filter.model.name}} >
      {{filter.model.desc}}
    </button>
  {{/each}}
</div>
