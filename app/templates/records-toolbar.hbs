<div class="toolbar">
  <div class="toolbar__search js-records-search">
    {{input value=search placeholder="Search"}}
  </div>

  <button class="{{if noFilterValue 'active'}} toolbar__radio js-filter" {{action "setFilter"}}>
    All
  </button>

  <div class="divider"></div>
  {{#each filters as |item|}}
    {{#record-filter model=item filterValue=filterValue as |filter|}}
      <button class="{{if filter.checked 'active'}} toolbar__radio js-filter" {{action "setFilter" filter.model.name}} >
        {{filter.model.desc}}
      </button>
    {{/record-filter}}
  {{/each}}
</div>
