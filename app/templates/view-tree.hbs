<div class="list-view">
  <div class="list-view__header row">
    <div class="cell cell_type_header">
      Name
    </div>
    <div class="cell cell_type_header">
      Template
    </div>
    <div class="cell cell_type_header">
      Model
    </div>
    <div class="cell cell_type_header">
      Controller
    </div>
    <div class="cell cell_type_header">
      View / Component
    </div>
    <div class="cell cell_size_small cell_value_numeric cell_type_header">
      Duration
    </div>
    <!-- Account for scrollbar width :'(  -->
    <div class="cell cell_type_header spacer"></div>
  </div>

  <div class="list-view__list-container">
    {{#view-list owner=this pinnedObjectId=pinnedObjectId}}
      <div class="ember-list-container">
        {{#each model as |item|}}
          {{view "view-item" content=item controller=this}}
        {{/each}}
      </div>
    {{/view-list}}
  </div>
</div>
